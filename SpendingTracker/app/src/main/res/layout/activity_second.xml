<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/darker_gray"
    tools:context="com.example.kittumadhu.spendingtracker.SecondActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"

        android:id="@+id/date"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showDatePickerDialog"
        android:layout_below="@+id/MiscText"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBottom="@+id/date"
        android:layout_alignLeft="@+id/miscExp"
        android:layout_alignStart="@+id/miscExp" />



         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Categories"
             android:textSize="25dp"
             android:id="@+id/textexpense"
             android:paddingBottom="10dp"
             android:layout_alignParentLeft="true"
             />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AmountSpent"
        android:textSize="25dp"
        android:id="@+id/textamountspent"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"/>



        <TextView
            android:id="@+id/foodText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textexpense"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Food"
            android:textSize="20dp"
            android:padding="5dp"/>

          <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="Enter Amount"
              android:id="@+id/foodExp"
              android:inputType="number"
              android:layout_alignTop="@+id/foodText"
              android:layout_alignLeft="@+id/textamountspent"
              android:layout_alignStart="@+id/textamountspent"
              android:padding="5dp"/>
    <TextView
        android:id="@+id/travelText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/foodText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Travel"
        android:textSize="20dp"
        android:padding="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        android:id="@+id/travelExp"
        android:inputType="number"
        android:layout_alignTop="@+id/travelText"
        android:layout_alignLeft="@+id/textamountspent"
        android:layout_alignStart="@+id/textamountspent"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/ShoppingText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/travelText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Shopping"
        android:textSize="20dp"
        android:padding="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        android:id="@+id/shoppinExp"
        android:inputType="number"
        android:layout_alignTop="@+id/ShoppingText"
        android:layout_alignLeft="@+id/textamountspent"
        android:layout_alignStart="@+id/textamountspent"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/MiscText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ShoppingText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Misc"
        android:textSize="20dp"
        android:padding="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        android:id="@+id/miscExp"
        android:inputType="number"
        android:layout_alignTop="@+id/MiscText"
        android:layout_alignLeft="@+id/textamountspent"
        android:layout_alignStart="@+id/textamountspent"
        android:padding="5dp"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ok"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:id="@+id/button"
      android:onClick="onClickOk"/>


</RelativeLayout>
